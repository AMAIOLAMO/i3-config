bindsym $mod+Shift+r restart

# shutdown / restart / suspend...

# slightly modified version from: https://www.reddit.com/r/i3wm/comments/7ak40z/how_do_you_shutdown_from_i3/
set $mode_system [SYSTEM MODE] (l) logout, (Ctrl+r) reboot, (Ctrl+s) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id i3-msg exit, mode "default"

    # uses Ctrl to decrease the chance of accidentally pressing it
    bindsym Ctrl+r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"

